<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2 col-md-3 sidebar custom-sidebar">
            <div class="sidebar-title">
                <% if current_user.present? %>
                    <% if current_user.plan_id == 1 %>
                        <h3 class="sidebar-title-text">BASIC VIDEO SECTION</h3>
                        <h4 class="sidebar-desc-text">Literally keytar iPhone, trust fund stumptown heirloom chartreuse shabby chic cronut YOLO slow-carb actually vaporware.</h4>
                    <% elsif current_user.plan_id == 2 %>
                        <h3 class="sidebar-title-text">INTERMEDIATE VIDEO SECTION</h3>
                        <h4 class="sidebar-desc-text">Literally keytar iPhone, trust fund stumptown heirloom chartreuse shabby chic cronut YOLO slow-carb actually vaporware.</h4>
                    <% else %>
                        <h3 class="sidebar-title-text">ADVANCED VIDEO SECTION</h3>
                        <h4 class="sidebar-desc-text">Literally keytar iPhone, trust fund stumptown heirloom chartreuse shabby chic cronut YOLO slow-carb actually vaporware.</h4>
                    <% end %>
                <% else %>
                    <h2>User not logged in</h2>
                <% end %>
            </div>
            <% @sections.each do |s| %>
                <ul>
                    <h4><%= s.title %></h4>
                    <% @videos.each do |v| %>
                        <% if v.section_id == s.id %>
                            <li><%= link_to v.name, video_path(id: v.id) %></li>
                        <% end %>
                    <% end %>
                </ul>
            <% end %>
        </div>
        <div class="col-sm-10 col-md-9">
            <h2 class="text-center"><%= @current_video.name %></h2>
            <div class="embed-responsive embed-responsive-16by9">
                <iframe class="embed-responsive-item" src=<%= @current_video.video_url %> frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </div>
</div>